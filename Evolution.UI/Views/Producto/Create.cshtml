@using  Evolution.UI.Models.ViewModel;
@model ProductoViewModel
@{
    ViewData["Title"] = "Registro Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3> Crear Nueva Producto</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Create" asp-controller="Producto" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-4 mb-3">
                        <label asp-for="ProDesc" class="control-label"></label>
                        <input type="text" asp-for="ProDesc" class="form-control" placeholder="Descripcion">
                        <span asp-validation-for="ProDesc" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 mb-3">
                        <label asp-for="ProValor" class="control-label"></label>
                        <input type="text" asp-for="ProValor" class="form-control" placeholder="Valor">
                        <span asp-validation-for="ProValor" class="text-danger"></span>
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Registrar">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}
